<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Simple MVC</display-name>

  <!-- 顶层 WebApplicationContext Bean 的xml文件配置，Context 从中构造 Bean -->
  <!-- 该类型存在一个默认的配置文件 applicationContext.xml，也可以通过这个配置项自定义配置文件的位置 -->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>WEB-INF/controller-servlet.xml</param-value>
  </context-param>

  <!-- 负责加载顶层 WebApplicationContext -->
  <!-- 继承自 ServletContextListener 能够对 ServletContext 的生命周期进行监听-->
  <!-- 初始化完当前的 WebApplicationContext 后，还负责将这个 Context 绑定到 ServletContext 中 -->
  <!-- 此时 ServletContext 的功能就被 WebApplicationContext 加强了 -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>

</web-app>
